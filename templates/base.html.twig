<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ana Nades sf{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
            <link rel="stylesheet" type="text/css" href="css/style.css">
            <link rel="stylesheet" type="text/css" href="css/boxicons.min.css">
            <link rel="stylesheet" type="text/css" href="css/magnific-popup.css">
            <script src="../public/js/jquery.magnific-popup.min.js"></script>
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock %}

    </head>
    <body>
        {% block navbar %}
        <header class="mb-5">
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="img/ana.png" width="60" class="d-inline-block align-top" alt="">
                Ana Nades
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                </ul>
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item">
                        <form class="nav-link" method="get" action="/">
                            <input name="search" type="text" id="search"></input>
                        </form>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item d-flex align-items-center text-white">
                            {{ app.user.nickname }}
                            <img src="../public/img/<?= $_SESSION['user']->avatar ?>" alt="">
                        </li>
                        <li class="nav-item">
                            <a href="/logout" class="nav-link" role="button" aria-pressed="true" id="logout-btn">Logout</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a href="/login" class="nav-link" role="button" aria-pressed="true" id="login-btn">Log in</a>
                        </li>
                        <li class="nav-item">
                            <a href="/register" class="nav-link" role="button" aria-pressed="true" id="signup-btn">Sign up</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <div class="logobox container">
            <img src="img/logo.png" width="400" alt="">
        </div>
    </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="../public/js/script.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
